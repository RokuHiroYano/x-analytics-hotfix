{
  "manifest_version": 3,
  "name": "Xのアナリティクスバグの暫定修正",
  "version": "0.1.0",
  "description": "Xアナリティクスのアクティブ時間ヒートマップのグリッド崩れを暫定的に修正します。",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://x.com/i/account_analytics/audience*"],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Xアナリティクスを修正",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
